<synthetic xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.xebialabs.com/deployit/synthetic"
           xsi:schemaLocation="http://www.xebialabs.com/deployit/synthetic synthetic.xsd">

    <type type="udm.ItsmFacet" extends="xlrelease.TaskFacet" label="ITSM" description="Unified Data Model for ITSM">
        <property name="record" category="input" kind="string" required="false" label="Record Number" description="Unique identifier in ITSM."/>
        <property name="record_url" category="input" kind="string" required="false" label="Record URL" description="Link to the record in ITSM."/>
        <property name="title" category="input" kind="string" required="false" label="Record Title" description="Title of the record in ITSM."/>
        <property name="status" category="input" kind="string" required="false" label="Status" description="Status of the record."/>
        <property name="priority" category="input" kind="string" required="false" label="Priority" description="Priority of the record."/>
        <property name="createdBy" category="input" kind="string" required="false" label="Record Created By" description="Record created by."/>
        <property name="serverUrl" category="input" kind="string" required="false" label="Server Url"/>
        <property name="serverUser" category="input" kind="string" required="false" label="Server User"/>
    </type>
</synthetic>
